<section class="spacing-top-lg" id="legal-section-one">
  <div class="row subpage-close end-xs">
    <div class="col-xs-12">
      <a href="/" class="back-button">{% include 'icon-close' %}</a>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-7 col-lg-offset-1 col-md-7 col-md-offset-1 col-sm-10 col-sm-offset-1 col-xs-10 col-xs-offset-1">
      <p class="hero-copy dark-text">{{ page.title }}</p>
      <p class="xx-large">Last Updated: {{ page.published_at | date: "%B %d, %Y" }}</p>

    </div>
  </div>
</section>
<section class="legal-content" id="leagal-section-two">
  <div class="row">
    <div class="col-lg-7 col-lg-offset-1 col-md-7 col-md-offset-1 col-sm-10 col-sm-offset-1 col-xs-10 col-xs-offset-1">
      {{ page.content }}
    </div>
  </div>
</section>